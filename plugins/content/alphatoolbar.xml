  <params>    
    <param name="excludeSectionID" type="text" default="" label="Exclude Section ID" description="Exclude specific section ID : not display the link -Quote This Article- (to specify more than one section, seperate with a comma , ). Use 0 for uncategorized." /> 
    <param name="excludeCategoryID" type="text" default="" label="Exclude category ID" description="Exclude specific category ID : not display the link -Quote This Article- (to specify more than one category, seperate with a comma , ). Use 0 for uncategorized." /> 
    <param name="excludeID" type="text" default="" label="Exclude content ID" description="Exclude specific content items : not display the link -Quote This Article- (to specify more than one article, seperate with a comma , )." />
    <param name="@spacer" type="spacer" default="" label="" description="" />
    <param name="atb_show_icons_resize_text" type="radio" default="1" label="Icons resize text" description="Display icons for resize text." >
      <option value="1">Show</option>
      <option value="0">Hide</option>
    </param>
    <param name="atb_show_icon_hits" type="radio" default="1" label="Icon hits" description="Display icon for showing number hits." >
      <option value="1">Show</option>
      <option value="0">Hide</option>
    </param>      
    <param name="atb_show_go_top_link" type="radio" default="1" label="Link Back to Top" description="Display a link Back to top under article." >
      <option value="1">Show</option>
      <option value="0">Hide</option>
    </param>
    <param name="atb_include_pdf" type="radio" default="1" label="Include button PDF" description="Include button PDF in toolbar (disabled Joomla button/image)." >
      <option value="1">Show</option>
      <option value="0">Hide</option>
    </param>
     <param name="atb_include_print" type="radio" default="1" label="Include button Print" description="Include button Print in toolbar (disabled Joomla button/image)." >
      <option value="1">Show</option>
      <option value="0">Hide</option>
    </param>
     <param name="atb_include_mail" type="radio" default="1" label="Include button E-mail" description="Include button E-mail in toolbar (disabled Joomla button/image)." >
      <option value="1">Show</option>
      <option value="0">Hide</option>
    </param>   
    <param name="atb_include_tags" type="radio" default="1" label="Include button Tags" description="Include button Tags in toolbar (Keywords article)." >
      <option value="1">Show</option>
      <option value="0">Hide</option>
    </param>  
    <param name="@spacer" type="spacer" default="" label="" description="" />
    <param name="atb_position" type="radio" default="1" label="Position toolbar" description="Position toolbar (Above article or below article)." >
      <option value="1">Above</option>
      <option value="0">Below</option>
    </param>
    <param name="atb_show_on_printpage" type="radio" default="0" label="Show on print page" description="Show on print page." >
      <option value="1">Show</option>
      <option value="0">Hide</option>
    </param> 
